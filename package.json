{
    "name": "esbuild-typescript-template",
    "author": "CitRUS",
    "license": "MIT",
    "scripts": {
        "dev": "run-p dev:*",
        "dev:nodemon": "nodemon -w ./src -e ts,json -x \"node ./esbuild/dev && pnpm start\"",
        "dev:validate": "pnpm validate -- -w --preserveWatchOutput",
        "build": "run-s build:*",
        "build:validate": "pnpm validate",
        "build:esbuild": "node ./esbuild/prod",
        "start": "node ./dist/app",
        "validate": "tsc --noEmit",
        "prettier": "prettier --check",
        "prettier:fix": "pnpm prettier -- --write",
        "prettier:all": "pnpm prettier -- \"**/*.{md,json,yml,yaml,js,ts}\"",
        "prettier:fix:all": "pnpm prettier:all -- --write"
    },
    "devDependencies": {
        "@types/node": "14.14.31",
        "esbuild": "0.8.54",
        "nodemon": "2.0.7",
        "npm-run-all": "4.1.5",
        "prettier": "2.2.1",
        "source-map-support": "0.5.19",
        "typescript": "4.2.2"
    }
}
